<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="RecordPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #1F2741;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RecordController">
   <children>
      <Label layoutX="46.0" layoutY="42.0" prefHeight="56.0" prefWidth="560.0" text="Do You want to record this game ?" textFill="#14e3ff">
         <font>
            <Font name="Comic Sans MS Bold Italic" size="30.0" />
         </font>
      </Label>
      <Button layoutX="109.0" layoutY="194.0" mnemonicParsing="false" onAction="#yesRecord" style="-fx-background-color: #c221bf;" text="YES" textFill="WHITE">
         <font>
            <Font name="Bookman Old Style" size="22.0" />
         </font>
      </Button>
      <Button layoutX="384.0" layoutY="194.0" mnemonicParsing="false" onAction="#noRecord" style="-fx-background-color: #ffdb00;" text="NO">
         <font>
            <Font name="Bookman Old Style" size="22.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
